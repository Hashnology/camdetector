<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.karimapps.faizan.HiddenCam_MetalDetector">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Include required permissions for Google Mobile Ads to run. -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/launcher_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/launcher_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.karimapps.faizan.HiddenCam_MetalDetector.SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.karimapps.faizan.HiddenCam_MetalDetector.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MainTheme" />
        <activity
            android:name="com.karimapps.faizan.HiddenCam_MetalDetector.CameraActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MainTheme" />
        <activity
            android:name="com.karimapps.faizan.HiddenCam_MetalDetector.RadiationMeter"
            android:screenOrientation="portrait"
            android:theme="@style/MainTheme" />
        <activity android:name="com.karimapps.faizan.HiddenCam_MetalDetector.MotionListner"
            android:screenOrientation="portrait"
            android:theme="@style/MainTheme"
            ></activity>
        <activity android:name="com.karimapps.faizan.HiddenCam_MetalDetector.TipsAndTricks"
            android:screenOrientation="portrait"
            android:theme="@style/MainTheme"
            ></activity>
        <activity
            android:name="com.karimapps.faizan.HiddenCam_MetalDetector.Main2Activity"
            android:label="@string/title_activity_main2" /> <!-- Include the AdActivity configChanges and theme. -->
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
        <activity
            android:name="com.karimapps.faizan.HiddenCam_MetalDetector.Main3Activity"
            android:label="@string/title_activity_main3"></activity>


    </application>

</manifest>